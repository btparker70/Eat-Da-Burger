<div class="container">
    <div class="jumbotron">
        <h1>Order Your Burger</h1>
        <div class="row">
            <div class="column">
                <h2>Eat Your Burger</h2>
                <ul>
                    {{#each burgers}}
                    <li>
                        {{#unless devoured}}
                        {{burger_name}}<button class="devour" data-id="{{id}}">DEVOUR!</button>
                        {{/unless}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <h2>Devoured Burgers</h2>
                <ul>
                    {{#each burgers}}
                    <li>
                        {{#if devoured}}
                        {{burger_name}}
                        {{/if}}
                    </li>
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row">
            <form class="create-form">
                <div class="form-group">
                    <label for="createBurger">Burger name:</label>
                    <input type="text" id="createBurger" name="name">
                </div>
            </form>
            <button type="submit">Submit</button>
        </div>
    </div>
</div>