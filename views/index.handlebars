<header class="jumbotron">
    <h1 class="display-3">Eat Da Burger!</h1>
    <p class="lead">A simple node app for creating, reading, updating and deleting to and from a SQL database.</p>
</header>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Eat Your Burger</h2>
            <ul>
                {{#each burgers}}
                <li>
                    {{#unless devoured}}
                    {{burger_name}}<button type="button" class="devour" id="devour" data-id="{{this.id}}"
                        data-newDevoured="{{devour}}">DEVOUR!</button>
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </div>
        <div class="col-6">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                <li>
                    {{#if devoured}}
                    {{burger_name}}
                    {{/if}}
                </li>
                {{/each}}
            </ul>
        </div>
    </div>

</div>
<footer class="jumbotron">
    <div class="row">
        <h1>Order Your Burger</h1>

        <form class="create-form">
            <div class="form-group">
                <label for="createBurger">Burger name:</label>
                <input type="text" id="createBurger" name="name">
            </div>
        </form>
    </div>
    </footer>